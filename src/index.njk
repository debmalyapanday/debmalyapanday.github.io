---
layout: layout.njk
title: Home
---

<div class="hero">
    <div class="container">
        <h1>{{ site.title }}</h1>
        <p>{{ site.description }}</p>
    </div>
</div>

<div class="section">
    <div class="container">
        <h2>Our Services</h2>
        <div class="grid">
            {% for service in site.services %}
                <div class="card">
                    <i class="{{ service.icon }}"></i>
                    <h3>{{ service.name }}</h3>
                    <p>{{ service.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
